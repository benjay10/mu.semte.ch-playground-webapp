{{page-title @model.subject}}

<h1 class="">{{@model.subject}}</h1>

<div class="row">
  <!-- Carousel, sliding images -->
  <div class="col-md-8">
    <div id="carouselForLot" class="carousel slide mb-3" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselForLot" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselForLot" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselForLot" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/images/designerlamp.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/images/designerlamp.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/images/designerlamp.jpg" class="d-block w-100" alt="...">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselForLot" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselForLot" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

  <!-- Bid panel -->
  <Bidonit class="col-md-4 h-100" @model={{@model}} @onMakeBid={{makeBid}} @onMarkFavorite={{markFavorite}} @onUnmarkFavorite={{unmarkFavorite}} />
</div>
<div class="clearfix mt-3">
  <p>
    {{@model.description}}
  </p>
  <div class="row">
    <div class="col-md-6">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <span class="fw-bold">Condition</span>
          <span class="float-end text-end">{{@model.condition.conditionString}}</span>
        </li>
        <li class="list-group-item">
          <span class="fw-bold">Amount of items</span>
          <span class="float-end text-end">{{@model.amountofobjects}}</span>
        </li>
        <li class="list-group-item">
          <span class="fw-bold">Category</span>
          <span class="float-end text-end">{{@model.fullCategory}}</span>
        </li>
        <li class="list-group-item">
          <span class="fw-bold">Start date</span>
          <span class="float-end text-end">{{@model.auction.niceStartdate}}</span>
        </li>
        <li class="list-group-item">
          <span class="fw-bold">End date</span>
          <span class="float-end text-end">{{ifp @model.niceEnddate "N.A."}}</span>
        </li>
      </ul>
    </div>
    <div class="col-md-6">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <span class="fw-bold">Product VAT</span>
          <span class="float-end text-end">{{@model.productvat}}</span>
        </li>
        <li class="list-group-item">
          <span class="fw-bold">Auction Tax</span>
          <span class="float-end text-end">{{@model.auctiontax}}</span>
        </li>
        <li class="list-group-item">
          <span class="fw-bold">VAT on Auction Tax</span>
          <span class="float-end text-end">{{@model.vatonauctiontax}}</span>
        </li>
        <li class="list-group-item">
          <span class="fw-bold">Start Amount</span>
          <span class="float-end text-end">{{@model.niceStartamount}}</span>
        </li>
        <li class="list-group-item">
          <span class="fw-bold">Bid increment</span>
          <span class="float-end text-end">{{@model.niceStepamount}}</span>
        </li>
      </ul>
    </div>
  </div>
</div>
